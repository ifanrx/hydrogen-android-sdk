<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="5dp">

    <TextView
            android:id="@+id/indexTv"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:paddingEnd="20dp"
            android:layout_width="wrap_content" android:layout_height="0dp"
            android:gravity="center" android:textStyle="bold" tools:text="1"/>

    <TextView
            android:id="@+id/idTv" android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toRightOf="@id/indexTv"
            app:layout_constraintRight_toRightOf="parent" android:singleLine="true" android:maxLines="1"
            android:ellipsize="end" tools:text="5d89c8a2619f062028bb326c"/>

    <TextView
            android:id="@+id/propTv" android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/indexTv" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idTv" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp" android:singleLine="true" android:maxLines="1" android:ellipsize="end"
            tools:text="标题"/>

</androidx.constraintlayout.widget.ConstraintLayout>