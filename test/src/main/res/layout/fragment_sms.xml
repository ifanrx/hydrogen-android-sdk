<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context=".SmsActivity">

    <EditText android:id="@+id/phoneTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="手机号码"/>
    <EditText android:id="@+id/codeTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="验证码"/>
    <Button android:id="@+id/sendBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="填写手机号码，发送验证码"/>
    <Button android:id="@+id/verifyBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="填写手机号码和验证码，校验验证码是否正确"/>
</LinearLayout>