<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CloudFuncActivity">

    <EditText android:id="@+id/funcNameTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="云函数名字"/>
    <EditText android:id="@+id/dataTv"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:lines="5" android:hint="云函数的输入" android:gravity="left|top"
    />

    <RadioGroup android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <RadioButton android:id="@+id/syncBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="同步"/>
        <RadioButton android:id="@+id/asyncBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="异步"/>
    </RadioGroup>
    <Button android:id="@+id/invokeBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="执行" />

    <TextView android:id="@+id/outputTv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>